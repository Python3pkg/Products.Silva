<tal:block 
  tal:define="model request/model; view here;">
  <h2
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    tal:content="model/get_title"
    i18n:domain="silva"
    i18n:translate="">Index</h2>

  <table class="silvatable indexer"
    tal:define="model request/model; view here;
                indexTitles model/getIndexNames">
    <tr tal:condition="python: indexTitles != None">
      <th>
        Terms
      </th>
      <th i18n:translate="">
        Links
      </th>
    </tr>
    <tr tal:repeat="indexTitle indexTitles">
      <tal:block tal:define="indexEntry python: model.getIndexEntry(indexTitle)">
        <td tal:content="indexTitle"/>
        <td 
          tal:content="structure python:view.render_links(indexTitle, indexEntry)"/>
      </tal:block>
    </tr>
    <tr tal:condition="python: indexTitles == None">
      <td colspan="2" i18n:translate="">
        No index items listed or found. Perhaps go to the edit tab and run the indexer.
      </td>
    </tr>
  </table>
</tal:block>

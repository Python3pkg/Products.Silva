<tal:def
  define="
    model request/model;
    toc_depth model/toc_depth;
    public options/public | nothing;
    append_to_url options/append_to_url | string:/edit/tab_edit;
">
<h2 class="heading" 
  tal:define="heading model/get_title"
  tal:condition="not:request/other/suppress_title | nothing" 
  tal:content="heading"
  tal:omit-tag="not:heading">
  Title
</h2>

<p class="content-description"
   tal:define="desc python:context.service_metadata.getMetadataValue(model,'silva-extra','content_description',acquire=0)"
   tal:condition="desc"
   tal:content="desc" />

<ul tal:replace="structure python:model.render_tree(public,append_to_url)" />

</tal:def>

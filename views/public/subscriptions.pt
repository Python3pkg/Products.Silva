<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<!-- _______ Silva version v1.0b _______ -->
<tal:block define="here request/model;">
<metal:block use-macro="request/model/layout_macro.html/macros/layout">
<metal:block fill-slot="style">
  <style>
    div.header {
    height: 16px;
    margin : 0;
    /*  border-bottom: 1px solid #689799; */
    }
  </style>
</metal:block>
<metal:block fill-slot="main">
  <tal:block
    define="
      model request/model;
      title model/get_title;
      feedback options/message | request/message|nothing;
      path python: '/'.join(model.getPhysicalPath());"
    i18n:domain="silva"
    >
    <div tal:condition="feedback" class="feedback" tal:content="feedback">
      feedback message
    </div>
    <form method="POST" name="form" action="subscription_request" enctype="multipart/form-data">
      <table class="listing">
        <thead>
          <tr class="top-controls">
            <td colspan="3">
              <h3 i18n:translate="">
                Subscribe for 
                &#xab;<tal:block i18n:name="title_or_id" content="model/get_title_or_id" />&#xbb;
              </h3>
              <p i18n:translate="">
                you'll get an confirmation message...
              </p>
            </td>
          </tr>
        </thead>
        <tbody>
          <tr class="odd">
            <td class="field-title">
              <span i18n:translate="">emailaddress</span><span class="warning">*</span>
            </td>
            <td>
              <input type="text" name="emailaddress" size="40" />
            </td>
            <td>
            </td>
          </tr>
        </tbody>
        <tfoot>
          <tr class="controls">
            <td></td>
            <td align="right" colspan="2">
              <input type="hidden" name="path" tal:attributes="value path"
              />
              <input class="button"
                type="submit"
                value="subscribe"
                title="access key: alt-s"
                accesskey="c"
                i18n:attributes="title;value"
              />
            </td>
          </tr>
        </tfoot>
      </table>
    </form>
    <form method="POST" name="form" action="cancellation_request" enctype="multipart/form-data">
      <table class="listing">
        <thead>
          <tr class="top-controls">
            <td colspan="3">
              <h3 i18n:translate="">
                Unsubscribe for 
                &#xab;<tal:block i18n:name="title_or_id" content="model/get_title_or_id" />&#xbb;
              </h3>
              <p i18n:translate="">
                you'll get an confirmation message...
              </p>
            </td>
          </tr>
        </thead>
        <tbody>
          <tr class="odd">
            <td class="field-title">
              <span i18n:translate="">emailaddress</span><span class="warning">*</span>
            </td>
            <td>
              <input type="text" name="emailaddress" size="40" />
            </td>
            <td>
            </td>
          </tr>
        </tbody>
        <tfoot>
          <tr class="controls">
            <td></td>
            <td align="right" colspan="2">
              <input type="hidden" name="path" tal:attributes="value path"
              />
              <input class="button"
                type="submit"
                value="unsubscribe"
                title="access key: alt-u"
                accesskey="c"
                i18n:attributes="title;value"
              />
            </td>
          </tr>
        </tfoot>
      </table>
    </form>
  </tal:block>
</metal:block>
</metal:block>
</tal:block>
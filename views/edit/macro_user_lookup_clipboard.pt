<metal:block define-macro="clipboard">
  <div class="hilight borders top bottom left right"
    style="padding: 0.5em; width: 23em; float: right; margin: 0em 0em 2em 1em;">
    <metal:block define-macro="clipboard_no_style">
      <form action="."
        method="POST"
        tal:define="
          clipboard_members view/lookup_get_selection;">
        <table border="0"
          cellpadding="5"
          cellspacing="0"
          width="100%">
          <tr align="left">
            <td colspan="2">
              <div style="float: right;">
                <metal:block define-slot="clipboard_lookup_action">
                  <a class="buttonlink" 
                    accesskey="l"
                    title="Lookup users... - alt-l"
                    style="float: right;"
                    href="lookup">
                    Lookup users...
                  </a>
                </metal:block>
              </div>
              <div>
                <b>
                  User lookup clipboard:
                </b>
              </div>
            </td>
          </tr>
          <tr tal:repeat="userid python:clipboard_members.keys()">
            <tal:block define="member python: model.sec_get_member(userid)">
            <td width="1%">
              <input name="userids:list"
                type="checkbox"
                value="userid"
                tal:attributes="
                  value member/userid;
                  id string:lookup_${member/userid}" />
            </td>
            <td>
              <b><label tal:content="member/fullname"
                tal:attributes="for string:lookup_${member/userid}">
                Name
              </label></b>
            </td>
            </tal:block>
          </tr>
          <tr tal:condition="not:clipboard_members">
            <td>
              <i>
                No users on "Lookup Clipboard"
              </i>
            </td>
          </tr>
          <tr valign="top">
            <td align="left"
              colspan="2">
              <tal:block condition="clipboard_members">
                <metal:block define-slot="clipboard_actions" />
              </tal:block>
            </td>
          </tr>
        </table>
      </form>
    </metal:block>
  </div>
</metal:block>

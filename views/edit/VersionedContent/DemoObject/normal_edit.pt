<html tal:omit-tag=""
  tal:define="
    view here;
    model request/model;
    root_url model/get_root_url;
    global editable model/get_editable;
    title model/get_title_editable;
    breadcrumb_vein string:Editor;
">

<table class="columns columns2">
  <tbody>
    <tr>
      <tal:block replace="nothing">
        _____________________ sidebar _____________________
      </tal:block>
      <td class="left"
        tal:define="template_id string:tab_edit">
        <metal:block use-macro="view/macro_vein_navigation/macros/vein" />
      </td>

      <tal:block replace="nothing">
        _____________________ main _____________________ 
      </tal:block>
      <td class="main">

        
<form method="POST" name="form" action="demoObject_submit">
  <table class="listing">
    <thead>
      <tal:block replace="nothing">
        ______________ vein + title row ______________
      </tal:block>
      <tr>
        <td class="top"
          colspan="3">
          <h2>
            <img tal:replace="structure python:view.render_icon(model)" />
            Characteristics of &#xab;<tal:block content="title" />&#xbb;
          </h2>
        </td>
      </tr>
    </thead>

    <tbody tal:define="fields view/form/get_fields">
      <tr>
        <th class="align-right"
          width="12%">
          Element
        </th>
        <th>
          Content
        </th>
        <th width="30%">
          Note
        </th>
      </tr>

      <tr class="even">
        <td class="field-title">
          Title<span class="warning">*</span>
        </td>
        <td>
          <input tal:replace="structure python:view.form.object_title.render(title)" />
        </td>
        <td>
          The title
        </td>
      </tr>


      <tr class="odd">
        <td class="field-title">
          Information
        </td>
        <td>
          <input tal:replace="structure python:view.form.info.render(editable.info())" />
        </td>
        <td>
          Some information
        </td>
      </tr>

      <tal:block replace="nothing"> _______ content editor _______ </tal:block>
      <tr class="even">
        <td class="field-title">
          <a href="content_mode">Edit content</a>
          <a href="content_mode"><img tal:attributes="src string:${root_url}/globals/edit_element.gif" width="16" height="16" border="0" alt="edit element" /></a>
        </td>
        <td class="empty"
          colspan="2">
          <div class="message"
            style="background:#eceeee;border-style:none;">
            <p tal:replace="structure here/get_content" />
            <p tal:condition="not: here/get_content"
              tal:replace="structure string:(nothing filled in)" />
          </div>
        </td>
      </tr>

      <tr class="odd">
        <td class="field-title">
          Number
        </td>
        <td>
          <input tal:replace="structure python:view.form.number.render(editable.number())" />
        </td>
        <td>
          A number
        </td>
      </tr>

      <tr class="even">
        <td class="field-title">
          Date
        </td>
        <td>
          <input tal:replace="structure python:view.form.date.render(editable.date())" />
        </td>
        <td>
          Some date
        </td>
      </tr>
    </tbody>
      
    <tfoot>
      <tr class="controls">
        <td class="align-right"
          colspan="3">
          <input class="button"
            type="submit"
            name="form_submitted"
            value="Save Demo Object"
            title="access key: alt-s"
            accesskey="s"
          />
        </td>
      </tr>
    </tfoot>
  </table>
</form>
        
      </td>
    </tr>
  </tbody>
</table>

</html>

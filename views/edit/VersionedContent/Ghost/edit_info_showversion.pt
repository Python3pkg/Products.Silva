<html tal:omit-tag=""
  lang="en"
  xml:lang="en"
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:notal="http://www.infrae.com/silva/notal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="silva"
  tal:define="
    view here;
    model request/model;
    version options/version;
    version_name options/name;
    title options/title;
    link_status python:here.get_ghost_link_status_text(version);
    content_url python:version.get_haunted_url();
">

  <table class="listing">
    <thead>
      <tal:block replace="nothing">
        ______________ vein + title row ______________
      </tal:block>
      <tr>
        <td class="top"
          colspan="2">
          <h2 i18n:translate="">
            <img tal:replace="structure python:view.render_icon(model)" i18n:name="icon" />
            ghost of &#xab;<tal:block content="title" i18n:name="title" />&#xbb; (<tal:block content="version_name" i18n:name="version_name" /> version)
          </h2>
        </td>
      </tr>
    </thead>

    <tbody>
      <tr>
        <th width="33%" i18n:translate="">
          attributes
        </th>
        <th i18n:translate="">
          content
        </th>
      </tr>

      <tr class="even">
        <td class="designator">
          <span class="matchlabel" i18n:translate="">reference</span>
          <p i18n:translate="">
            path to original (begins with &#8216;/&#8217;).
          </p>
        </td>
        <td class="field"
          tal:content="content_url">
          /foo/bar
        </td>
      </tr>

      <tr class="odd"
        tal:condition="not:link_status">
        <td class="designator">
          <span class="matchlabel" i18n:translate="">link</span>
          <p i18n:translate="">
            Link to editor screen of original.
          </p>
        </td>
        <td class="field">
          <a href="original"
            tal:attributes="href python:content_url + '/edit/tab_edit'"
            tal:content="title">
            Link
          </a>
        </td>
      </tr>

      <tr class="odd"
        tal:condition="link_status">
        <td class="designator">
          <span class="matchlabel" i18n:translate="">problem</span>
        </td>
        <td class="field alert">
          <span class="error" i18n:translate=""
            tal:content="structure link_status" />
        </td>
      </tr>
    </tbody>

    <tfoot>
      <tr class="controls">
        <td colspan="2">
        </td>
      </tr>
    </tfoot>
  </table>

</html>

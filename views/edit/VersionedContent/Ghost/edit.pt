<div class="margins"
    tal:define="model request/model">
<p class="halfline">&nbsp;</p>
<content tal:condition="model/get_unapproved_version" tal:define="
  version     python:model.get_editable();
  link_status python:here.get_link_status_text(version);
  content_url python:version.get_content_url();
 ">
    <h2><span tal:replace="model/id" /></h2>

<form action="submit" method="POST">
<table width="96%" cellspacing="0" cellpadding="5" border="0"
  tal:attributes="width container/table_width; cellspacing container/table_cellspacing;
                  cellpadding container/table_cellpadding; border container/table_border">
<tr>
<th align="left" colspan="2">
Attributes
</th>
<th align="left">
Content
</th>
<th align="left">
Notes
</th>
</tr>

<tr class="focus" valign="top">
<td align="right">
Path:
</td>
<td align="right">
<span class="required">*</span>
</td>
<td>
<input type="text" name="content_url" size="60" value="" 
  tal:attributes="value content_url"/>
</td>
<td class="leadedbody">
Path to original (starts with a slash).
</td>
</tr>

<tr class="focus-cycle" valign="top"
 tal:condition="not:link_status">
<td align="right">
Link:
</td>
<td align="right">
&nbsp;
</td>
<td>
<a href="original"
  tal:attributes="href python:content_url + '/edit/tab_preview'"
  tal:content="python:content_url + ' (' + model.get_editable().get_title() + ')'">Link
</a>
</td>
<td class="leadedbody">
&nbsp;<span tal:replace="nothing"> _______ FIXME: add 'Locate original' button _______ </span>
</td>
</tr>

<tr class="focus-cycle" valign="top"
 tal:condition="link_status">
<td align="right">
Problem:
</td>
<td align="right">
&nbsp;
</td>
<td class="error" tal:content="structure link_status" />
<td class="leadedbody">
&nbsp;
</td>
</tr>

<tr class="controls">
<td colspan="2">
<input class="cancelbutton" type="button" name="edit_cancel" value=" Cancel " title="Access key: alt-c" accesskey="c" onClick="history.back()" />
</td>
<td align="right" colspan="2">
<input class="button" type="submit" name="add_submit" value=" Save ghost "  title="Access key: alt-s" accesskey="s" />
</td>
</tr>
</table>
</form>
</content>
</div>

<html tal:omit-tag=""
  tal:define="
    view here;
    model request/model;
    root_url model/get_root_url;
    title model/get_title_editable;
    breadcrumb_vein string:Edit;
">

<metal:use-macro use-macro="view/macro_asset_edit/macros/editor">

<metal:fill-slot fill-slot="info">
<div class="info"
  tal:condition="model/canScale">
  <h3 class="info">
    <img tal:replace="structure icon" /> Image info
  </h3>
  <tal:condition condition="python: model.hires_image is None">
    <span class="subhead">format</span><br />
    <span tal:replace="model/getFormat" /> image<br />
    <span class="subhead">dimensions</span><br />
    <span tal:on-error="string: unknown"
      tal:replace="model/getDimensions"
    />
  </tal:condition> 
  <tal:condition condition="python: model.hires_image is not None">
    <span class="subhead">format</span><br />
        <span tal:replace="model/web_format" /> image<br />
    <span class="subhead">dimensions</span><br />
    <span tal:on-error="string: unknown"
      tal:replace="model/getDimensions"
    />
    image scaled to 
    <span tal:on-error="string: unknown"
      tal:replace="model/getCanonicalWebScale"
    />
  </tal:condition>        
</div>
<div class="info"
  tal:condition="not: model/canScale">
  Note: Silva offers image scaling and conversion if PIL (<a href="http://www.pythonware.com/products/pil/">Python Imaging Library</a>) is installed. 
</div>
</metal:fill-slot>

<metal:fill-slot fill-slot="additional_tools">
<metal:block use-macro="view/macro_asset_edit/macros/uploader" />
</metal:fill-slot>

</metal:use-macro>

</html>

<tal:block define="
  global active_tab string:tab_access;
  global breadcrumb_vein string:Emails;
  " />
  <html metal:use-macro="here/macro_index/macros/master">
    <div class="margins" metal:fill-slot="main">

      <h3><a href="tab_access" title="Up to top of Access tab">
        <img width="9" height="9" border="0" alt="Up to top of Access tab"
          tal:attributes="src string:${silva_root}/globals/up_gray.gif" />
          Access
        </a>
      </h3>
      <h2 class="worksheet"><img src="%s" width="16" height="16" alt="%s"
        tal:replace="structure python:view.render_icon(model.meta_type)" />&nbsp;
        Authorized users below this level
      </h2>
      <div class="hilight borders top bottom left right"
        style="padding: 0.5em; margin: 1em 3%; 2em 3%;">
        <tal:check
          condition="python:request.AUTHENTICATED_USER.has_permission('Change Silva access', model)">
          <tal:trigger
            define="dummy python:model.security_trigger()" />
          <!-- this form deliberately has no submit button -->
          <form action="." method="POST">
            <table cellspacing="0" cellpadding="3" border="0">
              <tr>
                <td colspan="2" align="left">
                  <b>Email addresses</b>
                </td>
              </tr>
              <tr>
                <td>
                  Addresses are formatted for copying and pasting 
                  in the &#8216;To:&#8217; field of an email message.
                  <br />
                  <textarea name="data" cols="78" rows="5" wrap="soft" 
                    tal:content="view/tab_access_get_emails" />
                </td>
              </tr>
            </table>
          </form>
        </tal:check>
      </div>
    </div>
  </html>

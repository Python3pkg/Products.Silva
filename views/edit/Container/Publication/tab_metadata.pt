<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html tal:omit-tag=""
  lang="en"
  xml:lang="en"
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:notal="http://www.infrae.com/silva/notal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  tal:define="
    global vein string:settings;
    ">

<!-- settings (aka tab_metadata) for Container objects -->
<metal:block use-macro="here/macro_index/macros/master">
<metal:block fill-slot="main">
<metal:use use-macro="view/Container/tab_metadata/macros/master">
<metal:fill fill-slot="more_control">
<form tal:condition="here/service_layouts/get_installed_names" method="POST" action=".">
  <table class="listing">
    <thead>
      <tr tal:replace="nothing">
        ______________ vein + title row ______________
      </tr>
      <tr>
        <td class="top" colspan="3">
          <h2 tal:attributes="title string:id: ${model/id}">
            <img tal:replace="structure python:view.render_icon(model)" />                      
            layout
          </h2>
        </td>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th class="align-right"
          width="12%"
          i18n:translate="element">
          element
        </th>
        <th i18n:translate="content">
          content
        </th>
        <th width="25%"
          i18n:translate="note">
          note
        </th>
      </tr>
      <tal:repeat repeat="field here/layout_form/get_fields">
      <tal:define define="oddrow repeat/field/odd">
      <tr tal:attributes="class python:test(oddrow, 'odd', 'even')">
        <td class="align-right">
          <span tal:replace="python:field['title'].lower()">
            title
          </span><span class="warning" tal:condition="python:field.is_required()">*</span>
        </td>
        <td tal:content="structure python:field.render(getattr(model, field.id), request)">
          <input />
        </td>
        <td tal:content="structure string:${field/description}&nbsp;">
          note
        </td>
      </tr>
      </tal:define>
      </tal:repeat>
      <tr class="controls">
        <td class="align-right" colspan="4">
          <input class="button" type="submit" name="layout_submit:method" value=" Save layout " title="access key: alt-l" accesskey="l" />
        </td>
      </tr>
    </tbody>    
  </table>
</form>
</metal:fill>
</metal:use>
</metal:block>
</metal:block>
</html>

<tal:references i18n:domain="silva">
  <h4 title="list of contents that refer to this asset"
      i18n:attributes="title"
      i18n:translate="">usage references</h4>
  <p tal:condition="not:viewlet/references"
     i18n:translate="">
    No references to this asset.
  </p>
  <p tal:repeat="reference viewlet/references">
    <a title="edit content"
       tal:attributes="href reference/edit_url"
       i18n:attributes="title">
      <img class="icon" alt="edit content"
           height="16" width="16" style="float:right"
           i18n:attributes="alt"
           tal:attributes="src static/edit-find.png"
           />
    </a>
    <a tal:attributes="href reference/url;
                       title reference/path">
      <tal:icon tal:replace="structure reference/icon" />
      <span tal:replace="reference/title"/>
    </a>
  </p>
</tal:references>

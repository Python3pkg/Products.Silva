<tal:references>
  <h4>usage references</h4>
  <p tal:condition="not:viewlet/references"
     i18n:translate="">
    No references to this asset.
  </p>
  <p style="margin-top:0.3em"
     tal:condition="viewlet/references">
    <tal:references tal:repeat="reference viewlet/references">
      <a title="edit content"
         tal:attributes="href reference/edit_url"
         i18n:attributes="title">
        <tal:icon tal:replace="structure reference/icon" />
      </a>
      <a tal:content="reference/title"
         tal:attributes="href reference/url;
                         title reference/path">
        referring object, XXX: the title attribute should show the path from /
      </a> (<span tal:replace="reference/reason" />)<br />
    </tal:references>
  </p>
</tal:references>

<tal:button i18n:domain="silva">
  <a accesskey="#"
     tal:attributes="title view/help;
                     href string:${context/@@absolute_url}/edit/${view/tab};
                     class python:view.selected and 'selected' or None;
                     accesskey view/accesskey;">
    <span tal:replace="view/label" /><tal:selected
      tal:condition="python:not view.selected and view.label != 'publish now'">...</tal:selected>
  </a><tal:comment tal:replace="nothing">XXX: replace with generic condition for action buttons</tal:comment>
</tal:button>

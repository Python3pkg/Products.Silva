<h1 tal:replace="structure here/manage_page_header"/>

<h2 tal:define="manage_tabs_message options/manage_tabs_message | nothing"
  tal:replace="structure here/manage_tabs">Tabs</h2>

<h4><a href="../manage_services">Silva Services</a></h4>

<h2 
  tal:define="form_title string:Edit Silva Subscription Service"
  tal:replace="structure here/manage_form_title"
/>

<p class="form-help">
  Silva Subscription service:
</p>

<tal:block condition="not: context/subscriptionsEnabled">
  <h4>
    The subscription feature is currently disabled
  </h4>
    
  <form action="enableSubscriptions" method="post">
    <table cellspacing="0" cellpadding="2" border="0">
      <tr>
        <td align="left" valign="top">
          <div class="form-element">
            <input class="form-element" type="submit" value=" enable subscriptions " /> 
          </div>
        </td>
      </tr>
    </table>
  </form>
</tal:block>

<tal:block condition="context/subscriptionsEnabled">
  <h4>
    The subscription feature is currently enabled
  </h4>
    
  <form action="disableSubscriptions" method="post">
    <table cellspacing="0" cellpadding="2" border="0">
      <tr>
        <td align="left" valign="top">
          <div class="form-element">
            <input class="form-element" type="submit" value=" disable subscriptions " /> 
          </div>
        </td>
      </tr>
    </table>
  </form>
</tal:block>

<tal:block condition="context/isMaildropHostAvailable">
  <tal:block
    condition="context/isMaildropHostInstalled">
    <h4>
      The MaildropHost Product is available and installed
    </h4>
    
    <p>
      <a href=""
        tal:define="
          id string:service_subscriptions_mailhost;
          mailhost context/?id;"
        tal:attributes="href string:${mailhost/absolute_url}/manage_main"
        >
        <tal:block content="id" />
        (<tal:block content="mailhost/title_or_id" />)
      </a>
    </p>
  </tal:block>
  
  <tal:block condition="not: context/isMaildropHostInstalled">
    <h4>
      The MaildropHost Product is available.
    </h4>
    
    <p>
      To use this Product for sending the notification emails, 
      <br />
      please click the 'install MaildropHost' button.
    </p>
    
    <form action="installMaildropHost" method="post">
      <table cellspacing="0" cellpadding="2" border="0">
        <tr>
          <td align="left" valign="top">
            <div class="form-element">
              <input class="form-element" type="submit" value=" install MaildropHost " /> 
            </div>
          </td>
        </tr>
      </table>
    </form>
  </tal:block>
</tal:block>

<tal:block condition="not: context/isMaildropHostAvailable">
  <h4>
    The MaildropHost Product is not available.
  </h4>
  
  <p>
    Consider installing the MaildropHost Product.
    <br />
    See also README.txt and INSTALL.txt.
  </p>
  
</tal:block>

<h1 tal:replace="structure here/manage_page_footer">Footer</h1>

<metal:block use-macro="container/macro_edit_view/macros/edit_view">
<metal:block fill-slot="edit_input">
<div class="margins">
  <script type="text/javascript" tal:content="structure here/asset_reference.js" />
  <input type="button" class="button" name="" value="Get image reference"
    tal:attributes="onclick python:'getAssetReference(\'%s/edit/asset_lookup?filter=Image\', \'_reference_\', \'focusbox\', \'image_path\');;return false;;' % node.get_container().absolute_url();" />
  <input style="width:50%;" type="text" name="image_path" value=""
    tal:attributes="value python:node.getAttribute('image_path');"  />

  <h4>Image aligment:</h4>
  <tal:block define="global alignment python:node.getAttribute('alignment')" />
  <tal:block replace="nothing">THIS SHOULD PROBABLY BE SIMPLER?</tal:block>
  <input type="radio" name="alignment" value="none" checked="checked"
    tal:condition="python:alignment != 'none'" /> 
  <input type="radio" name="alignment" value="none" checked=""
    tal:condition="python:alignment == 'none'" /> 
  No specification<br />
  <input type="radio" name="alignment" value="image-left"
    tal:condition="python:alignment != 'image-left'" /> 
  <input type="radio" name="alignment" value="none" checked=""
    tal:condition="python:alignment == 'image-left'" /> 
  Align left<br />
  <input type="radio" name="alignment" value="image-center"
    tal:condition="python:alignment != 'image-center'" /> 
  <input type="radio" name="alignment" value="image-center" checked=""
    tal:condition="python:alignment == 'image-center'" /> 
  Align center<br />
  <input type="radio" name="alignment" value="image-right"
    tal:condition="python:alignment != 'image-right'" /> 
  <input type="radio" name="alignment" value="image-right" checked=""
    tal:condition="python:alignment == 'image-right'" /> 
  Align right<br />
  <input type="radio" name="alignment" value="float-left"
    tal:condition="python:alignment != 'float-left'" /> 
  <input type="radio" name="alignment" value="float-left" checked=""
    tal:condition="python:alignment == 'float-left'" /> 
  Float left<br />
  <input type="radio" name="alignment" value="float-right" 
    tal:condition="python:alignment != 'float-right'" /> 
  <input type="radio" name="alignment" value="float-right" checked=""
    tal:condition="python:alignment == 'float-right'" /> 
  Float right<br />

</div>
</metal:block>
<metal:block fill-slot="edit_notes">
  <ul class="tips">
    <li><b>Tip:</b> 
      Use the "Get image reference" button to locate an 
      image and place its reference. If you know the reference, you 
      can type it directly.
    </li>
    <li><b>Tip:</b> 
      Alignments using "float" make the image go next to following document
      element - if there's room for it.
    </li>
  </ul>
</metal:block>
</metal:block>
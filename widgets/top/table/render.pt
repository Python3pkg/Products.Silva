<init tal:omit-tag=""
  tal:define="global disable_delete python:1;
    global disable_move_up python:1;
    global disable_move_down python:1;
    global columns_info here/get_columns_info" />
<div metal:use-macro="container/macro_embed_view/macros/embed_view">
<div metal:fill-slot="embed_controls"  class="table-bg">
<table border="0" width="100%" cellspacing="0">
<tr class="controls-cycle">
  <td class="rowhead">
    &nbsp;Column settings
  </td>
  <td align="right">
    <input class="button" type="submit" tal:attributes="name string:${rel_url_start}/add_column:method" value="Add column" />&nbsp;
    <input class="warningbutton" type="submit" tal:attributes="name string:${rel_url_start}/remove_column:method" value="Delete column" />&nbsp;
  </td>
</tr>
</table>
<table border="0" width="100%" cellspacing="1">
<tr class="focus">
   <td tal:replace="nothing"><img tal:attributes="src string:${here/silva_root}/globals/pixel.gif" width="25" height="1" /></td>
  <td align="center" tal:repeat="info columns_info" tal:attributes="align info/align; width info/html_width">
     <div tal:omit-tag="" tal:define="align_name string:column_align_${repeat/info/index};
                                      width_name string:column_width_${repeat/info/index};
                                      align info/align">
     L:<input type="radio" value="left" 
              tal:attributes="name align_name; checked python:test(align == 'left', 'checked', nothing)" />
     C:<input type="radio" 
              tal:attributes="name align_name; checked python:test(align == 'center', 'checked', nothing)" value="center" />&nbsp;
     R:<input type="radio" 
              tal:attributes="name align_name; checked python:test(align == 'right', 'checked', nothing)" value="right" /><br />
     Relative width:&nbsp;<input size="2" type="text" maxlength="2" tal:attributes="name width_name; value info/width" />
     </div>
  </td>
</tr>
</table>
</div>
<div metal:fill-slot="embedded_elements" tal:omit-tag="">
<content tal:replace="structure python:here.service_editor.renderElementsCache(node)" />
</div>
<div metal:fill-slot="element_controls" tal:omit-tag="">

<table border="0" width="100%" cellspacing="0">
<tr>
<td>
<enable tal:omit-tag="" tal:replace="nothing">
  &nbsp;Move row(s) to position: 
  <select name="move_to">
    <option>(not yet)</option>
  </select>
  &nbsp;
  <input class="button" type="submit" value=" Move " 
    notal:attributes="name string:${rel_url_start}/save:method" />
&nbsp;&nbsp;&nbsp;
</enable>
</td>
<td align="right">
Type: 
<select name="element_type" tal:define="type python:here.get_type(node)">
  <option value="plain" 
          tal:attributes="selected python:test(type == 'plain', 'selected', nothing)">
    Plain table (bold borderless heading, borderless rows)
  </option>
  <option value="listing" 
          tal:attributes="selected python:test(type == 'listing', 'selected', nothing)">
    Listing table (bold borderless heading, horizontal line, borderless rows)
  </option>
  <option value="grid" 
          tal:attributes="selected python:test(type == 'grid', 'selected', nothing)" >
    Grid table (bold bordered heading, bordered rows)
  </option>
  <option value="datagrid"
          tal:attributes="selected python:test(type == 'datagrid', 'selected', nothing)">
    Data grid table (bold borderless heading, bordered rows)
  </option>
</select>
</td>
</tr>
</table>
</div>
</div>

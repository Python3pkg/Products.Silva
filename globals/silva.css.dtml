/* ____________________________________________________________ forms _____ */


div.fixIE6widget {
    width : 96%;
}

input:focus, textarea:focus { 
  color : #333355; 
  background : #e3f0e4 none; 
}

input:hover, textarea:hover { 
  color : #333355; 
  background : #e3f0e4 none; 
}

select:focus, select:hover { 
  color : #333344; 
  background : #c3d5e7;
}

input:focus:hover, textarea:focus:hover { 
  color : #333355; 
  background : #e3f0e4;
}

/* cool glow: 53538b */
input.transport[type="submit"]:hover, button[type="button"]:hover { 
  color : #e5fffe; 
  background : #74748b; 
  border-color : #99b4cf;
}

input.transport[type="submit"]:focus {
  color : #e9f7ff;
  background : #7a83a6;
}

/* warm glow: 668b69 bfffd3 */
input.button[type="submit"]:hover, button[type="button"]:hover { 
  color : #e5ffec; 
  background : #548e72; 
  border-color : #8dc1a8;
}

input.button[type="submit"]:focus, button[type="button"]:focus { 
  color : #bfffd3; 
  background : #538b58;
}

/* hot glow: 74748b */
input.warning[type="submit"]:hover { 
  color : #fff5f5; 
  background : #a85353; 
  border-color : #cdb1a3;
}

input.warning[type="submit"]:focus { 
  color : #f0c0c0; 
  background : #53538b;
}

input[type="submit"]:hover, input[type="button"]:hover {
  color : #bfffd3;
  background : #69878c;
}

input[type="submit"]:focus, input[type="button"]:focus {
   color : #bfffd3;
   background : #008a8a;
}

/* publish screen state coded buttons */
input.reject[type="submit"]:hover { 
  color : #e5ffec; 
  background : #9b8800; 
  border-color : #8dc1a8;
}
input.revoke[type="submit"]:hover { 
  color : #e5ffec; 
  background : #009a62; 
  border-color : #8dc1a8;
}
input.close[type="submit"]:hover { 
  color : #e5ffec; 
  background : #4a4aa7; 
  border-color : #8dc1a8;
}

/* image button */
input.imagebutton {
  background : transparent;
  border : 0;
}

input[type="checkbox"]:focus, input[type="radio"]:focus { 
  color : #777; 
  background : #dee9eb;
}

input[type="checkbox"]:hover, input[type="radio"]:hover { 
  color : #777; 
  background : #b9e3e8 none; 
}



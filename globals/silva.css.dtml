/* {border: 1px dotted red; } */

<dtml-with stylesheet_properties>

body {
    background: &dtml-mainBackground;;
  background-image: url(<dtml-var root>/globals/skyrise.gif);
  background-repeat: repeat-x;
    font: &dtml-mainFont;;
    color: &dtml-mainFontColor;;
    margin: 0;
    padding: 0;
    scrollbar-base-color: &dtml-shade70;;
    scrollbar-highlight-color: &dtml-shade70;;
    scrollbar-track-color: &dtml-shade56;;
    scrollbar-darkshadow-color: &dtml-shade56;;
    scrollbar-3dlight-color: &dtml-mainTabBorderColorSelected;;
    scrollbar-shadow-color: &dtml-mainTabBorderColorSelected;;
    scrollbar-arrow-color: &dtml-mainTabFontColorSelected;;
}

div.workspace {
  background : &dtml-workspace;;
  margin: 0;
}

img {
    border: none;
	vertical-align: middle;
}

/* _________________________________________________________ path bar _____ */

div.pathBar {
  font-size: 90%;
    color: &dtml-shade36;;
    background-image: url(<dtml-var root>/globals/skylight.gif);
    background-repeat: repeat-x;
    background-color: &dtml-pathBarBackground;;
    padding: 0em 4px 0.2em 22px;
    border: none;
    line-height: 1.4em;
}

div.pathBar a {
    color: &dtml-shade26;;
    font-weight: &dtml-mainTabFontWeight;;
    margin: 0 ! important;
    text-transform: none;
}
div.pathBar a:visited {
    color: &dtml-shade26;;
}
div.pathBar a:hover {
    color: &dtml-shade42;;
    text-decoration: underline;
}

div.pathBar a.manage {
  color: &dtml-shade50;;
  margin-left: 0.5em ! important;
}

div.pathBar a.idea {
  color: &dtml-shade78;;
}
div.pathBar a.idea:visited {
  color: &dtml-shade78;;
}
div.pathBar a.idea:hover {
  color: &dtml-shade96;;
  text-decoration: none;
}

div.pathBar img {
  vertical-align: top;
  margin: 0 0 0 -22px;
}


/* _____________________________________________________________ tabs _____ */

div.tabs {
  display : block;
  height : 1.2em;
    background-image: url(<dtml-var root>/globals/skyrise.gif);
    background-repeat: repeat-x;
    background-color: &dtml-mainTabBackdrop;;
  margin : 0;
    padding: 0 16px 0 16px;
}

div.tabs a {
    /* The normal, unselected tabs. They are all links */
  float : left;
  display : block;
  width : 7.5em;
  height : 1.1em;
    color: &dtml-mainTabFontColor;;
    background: &dtml-mainTabBackground;;
    border-color: &dtml-mainTabBorderColor;;
    border-width: 1px;
    border-style: solid solid solid solid;
  border-bottom-color: &dtml-shade50;;
    margin: 0;
    padding: 0;
  text-align : center;
    font-weight: &dtml-mainTabFontWeight;;
}

div.tabs a:visited {
  color: &dtml-mainTabFontColor;;
  background: &dtml-mainTabBackground;;
}

div.tabs a:hover {
  color: &dtml-mainTabFontColorSelected;;
    background: &dtml-mainTabBackgroundSelected;;
  border-bottom-color: &dtml-mainTabBackgroundSelected;;
  text-decoration: none;
}

div.tabs a.selected {
    /* The selected tab. There's only one of these */
    background: &dtml-mainTabBackgroundSelected;;
    border-bottom-color: &dtml-mainTabBackgroundSelected;;
}

div.tabs a.selected:visited {
  color: &dtml-mainTabFontColorSelected;;
  background: &dtml-mainTabBackgroundSelected;;
  border-bottom-color: &dtml-mainTabBackgroundSelected;;
}

div.tabs a.recede {
  /* The parent tab of a subscreen. There might be one of these :) */
  color: &dtml-mainTabFontColorSelected;;
  background: &dtml-mainTabBackgroundRecede;;
  border-bottom-color: &dtml-mainTabBackground;;
}

div.tabs a.recede:hover {
  background: &dtml-mainTabBackgroundSelected;;
  border-bottom-color: &dtml-mainTabBackgroundSelected;;
}

div.tabs a.left {
    /* The left side of the tab. */
  width : 1.5em;
    border-style: solid none solid solid;
}

div.tabs a.left:hover {
  border-bottom-color: &dtml-mainTabBackgroundSelected;;
}

div.tabs a.right {
    /* The right side of the tab. */
  width : 1.5em;
    border-style: solid solid solid none;
}

div.tabs a.right:hover {
  border-bottom-color: &dtml-mainTabBackgroundSelected;;
}

/* help */
div.tabs a.normal {
  float : right;
  width : 3em;
    font-size: 100%;
    color: &dtml-shade46;;
    background: transparent;
  border : none;
  text-align : right;
}
div.tabs a.normal:visited {
  color: &dtml-shade46;;
  background : transparent;
}
div.tabs a.normal:hover {
  color: &dtml-shade36;;
  background: transparent;
  text-decoration: underline;
}

div.tabs img {
    margin: 0.3em 0 0 0;
  border: none;
  vertical-align : bottom;
}

div.tabs div.air {
  display : block;
  float : left;
  background : transparent;
  width : 2em;
  height : 1em;
}


/* _________________________________________ flow bar (or sidewalk :) _____ */

div.flowBar {
  display : block;
    /* IE workaround */
    font-size : 20%;
    height : 1.8em;
  width : 100%;
  min-height : 4px;
  max-height : 0.4em;
  background: &dtml-mainTabBackgroundSelected;;
  margin: 0;
  padding: 0;
  /* was #636da6 */
  border-bottom: 1px solid &dtml-shade60;;
}


/* ___________________________________________________________ footer _____ */

div.footer {
  font-size: 94%;
  color: &dtml-shade30;;
  background: &dtml-listingTopBackground;;
  margin: 0.5em 0em 0em 0em;
    padding: 0em 16px 0.1em 16px;
    border-top: &dtml-shade60; 1px solid;
    border-bottom: none;
}

div.footer a {
  color: &dtml-mainLinkColor;;
    font-weight: &dtml-mainTabFontWeight;;
    padding: 0;
    margin: 0;
    text-transform: none;
}

img.icon {
    margin-right: 0em;
}

a.icon:hover {
  text-decoration: none;
}


/* _____________________________________________________ personal bar _____ */

div.personalBar {
  text-align: center;
  background: #505e65;
  margin: 0em 0em 0em 0em;
  padding: 0.1em 16px 0.2em 16px;
}

div.personalBar a {
  color: #b7cee6;
    padding: 0 ! important;
    margin: 0 ! important;
    text-transform: none;
    cursor: pointer;
}

div.personalBar img {
    vertical-align: middle;
}


/* ____________________________________________________ columns table _____ */

table {
    font-size: 100%;
}

table.columns {
	width: 100%;
  border-collapse: collapse;
}

/* 3 column table (default) */
table.columns td.left {
    width: 20%;
    padding: 0 8px 0 8px;
    vertical-align: top;
}
table.columns td.main {
    width: 60%;
    padding: 0 8px 0 0;
    vertical-align: top;
}
table.columns td.right {
    width: 20%;
    padding: 0 8px 0 0;
    vertical-align: top;
}

/* 2 column table */
table.columns2 td.left {
    width: 20%;
    padding: 0 0 0 8px;
    vertical-align: top;
}
table.columns2 td.main {
    width: 80%;
    padding: 0 8px 0 8px;
    vertical-align: top;
}

/* 1 column */
table.columns1 td.main {
    width: 100%;
    padding: 0 8px 0 8px;
    vertical-align: top;
}


/* ____________________________________________________ listing table _____ */

table.listing {
    color: #444444;
    width: 100%;
    margin: 0em 0em 2em 0em;    
    border-left: &dtml-listingBorder;;
    border-bottom: &dtml-listingBorder;;
    border-collapse: collapse;
    clear: both;
}

table.listing img {
	vertical-align: middle;
}

/* _____________________ rows ______________________ */

table.listing tr.controls {
  color: #c9dfe2;
  background: &dtml-listingControlsBackground;;
  text-align : right;
  /* in case it's empty */
  height : 0.2em;
}

table.listing tr.top-controls {
  background: &dtml-listingTopControlsBackground;;
}

table.listing tr.even {
    /* cycling starts darker (count begins at 0) */
    background: &dtml-listingEvenBackground;;
}

table.listing tr.odd {
    background: &dtml-listingOddBackground;;
}

table.listing tr.inter-controls {
  color: #c9dfe2;
  background: &dtml-listingInterControlsBackground;;
}

tr.divider, th.divider, td.divider {
  height : 0.5em;
  background: &dtml-listingDividerBackground;;
}

/* _____________________ cells _____________________ */

table.listing th {
    color: &dtml-listingHeaderFontColor;;
    background: &dtml-listingHeaderBackground;; 
    padding: 0em 0.6em 0em 0.6em;
  border-top: none;
    border-bottom: &dtml-listingBorder;;
    border-right: &dtml-listingBorder;;
    font-weight: normal;
    text-align: left;
    text-transform: &dtml-textTransform;;
    white-space: nowrap;
}

table.listing th.listing-left {
  width: 4%;
  text-align: left;
  padding-left: 0.4em;
}

table.listing th.listing-right {
  width: 4%;
  text-align: right;
  padding-right: 0.4em;
}

table.listing th.align-left, table.listing td.align-left {
  text-align: left;
}
table.listing th.align-center, table.listing td.align-center {
  text-align: center;
}
table.listing th.align-right, table.listing td.align-right {
  text-align: right;
}

table.listing td {
    border-right: &dtml-listingBorder;;
    padding: 0em 0.6em;
  vertical-align: top;
  text-align: left;
}

/* _______ title cell _______ */
table.listing td.top {
  color: &dtml-shade40;;
  background: &dtml-listingTopBackground;;
  border: &dtml-listingBorder;;
  border-style: solid solid solid solid;
  padding: 0em;
    text-align: right;
}
table.listing td.top h2 {
  color: &dtml-listingTopHeadingColor;;
    text-align: left;
    margin: 0.1em 0.4em 0.1em 0.4em;
    border: none;
}
table.listing td.top img {
    vertical-align: top;
}

table.listing tr.top-controls td {
  padding: 0em 0.4em;
}

/* _______ subhead cell _______ */
table.listing tr.top-controls h3 {
  color: &dtml-listingTopControlsHeadingColor;;
  margin: 0.1em 0.2em 0.2em 0.2em;
  padding: 0em;
  border: none;
  line-height : 100%;
}

table.listing td.listing-left {
  text-align: left;
  padding: 0em 0.4em 0em 0.4em;
  white-space: nowrap;
}

table.listing td.listing-right {
  text-align: right;
  padding: 0em 0.4em 0em 0.4em;
  white-space: nowrap;
}

table.listing tr.controls td, tr.inter-controls td {
  padding: 0em 0.4em 0em 0.4em;
}

table.listing td.field-title {
  text-align : right;
}

/* force button floats in table cells without text to line up properly */
table.listing div.controls {
  padding: 0.5em 0 0.2em 0;
  vertical-align: bottom;
}

/* rename this selector */
.widebody {
  color: #c9dfe2;
}


/* ______________ sidebar navigation ______________ */

table.listing th.top {
  color: #e3eef0;
  background: &dtml-listingHeaderBackground;; 
  padding: 0;
  border-top: &dtml-listingBorder;;
  vertical-align: bottom;
  text-align: center;
}

table.listing th.top img {
  vertical-align: bottom;
  padding: 0.5em 0 0 0;
}

table.listing th.top a.normal:link {
  display : block;
    color: &dtml-mainTabFontColor;;
    background: &dtml-listingHeaderBackground;; 
}

table.listing th.top a.normal:visited {
  display : block;
    color: &dtml-mainTabFontColor;;
    background: &dtml-listingHeaderBackground;; 
}

table.listing th.top a.normal:hover {
  display : block;
    color: &dtml-mainTabFontColorSelected;;
  background: #d2e6f8;
    text-decoration: none;
}

td.selected {
  background: &dtml-oddRowBackground;;
  border-top: &dtml-listingBorder;;
  border-bottom: &dtml-listingBorder;;
}

td.unselected {
  background: &dtml-evenRowBackground;;
  border-top: 1px solid &dtml-evenRowBackground;;
  border-bottom:  1px solid &dtml-evenRowBackground;;
}

td.unselected:hover { 
  color: &dtml-mainTabFontColorSelected;;
  background: #d2e6f8;
  border-top: &dtml-listingBorder;;
  border-bottom: &dtml-listingBorder;;
  cursor : pointer;
} 

/* _______ uplinks _______ */
table.listing a.top {
  display : block;
  width : 1.4em;
  background: &dtml-listingHeaderBackground;; 
    float: left;
    margin: 0em 0em 0em 0em;
    border-right: &dtml-listingBorder;;
    padding: 0em 0.2em 0em 0.2em;
}

table.listing a.up {
  display : block;
  width : 1.4em;
  background: &dtml-listingHeaderBackground;; 
    float: right;
    margin: 0em 0em 0em 0em;
    border-left: &dtml-listingBorder;;
    padding: 0em 0.2em 0em 0.2em;
}

table.listing a.top:hover {
    color: &dtml-mainTabBackgroundSelected;;
    background: &dtml-mainTabBackgroundSelected;;
    border-style: solid solid none none;
    text-decoration: none;
}

table.listing a.up:hover {
    color: &dtml-mainTabBackgroundSelected;;
    background: &dtml-mainTabBackgroundSelected;;
    border-style: solid none none solid;
  text-decoration: none;
}


/* _____________________________________________________ focus shapes _____ */

/* experimental */
table.sublisting {
  margin-top : 1em;
}

/* used to shape non-nested listing tables */
.focus-box {
  /* for IE5 */
  width : 73%;
  max-width : 56em; 
  margin : 0 8px 0 8px;
}

.focus-rectangle {
  /* for IE5 */
  width : 100%;
  max-width : 98%;
  margin : 0 8px;
  padding-top: 8px;
}


/* _______________________________________________________ form stuff _____ */

form {
    border: none;
    margin: 0;
}

/* in use? */
form.compact {
    margin: 0;
    padding: 0;
}

input {
    color : &dtml-inputFontColor;;
  background : &dtml-inputBackground;;
  margin-top: 1px;
    margin-bottom: 1px; /* IE bug fix */
    padding: 0.1em;
    border: &dtml-inputBorder;;
    vertical-align: middle;
    font: &dtml-inputFont;;
}
 
textarea {
    width: 93%;
    color : &dtml-inputFontColor;;
  background : &dtml-inputBackground;;
    padding: 0.1em;
    border: &dtml-inputBorder;;  
    font: &dtml-inputFont;;
  text-transform: none;
}

textarea.readable {
  font: 100% Verdana, Helvetica, Arial, sans-serif;
}

select {
  color : &dtml-mainTabFontColorSelected;;
  background : &dtml-controlBackground;;
  margin-top: 0.1em;
  margin-bottom: 0.1em;
  border : 1px solid &dtml-nightShade;;
    vertical-align: top;
    font: &dtml-inputFont;;
  font-size: 90% ! important;
  line-height : 96%;
}

select.transport {
  color: &dtml-standaloneButtonFontColor;;
  background : &dtml-standaloneButtonBackground;;
}

select.manipulator {
  color: &dtml-contextButtonFontColor;;
  background : &dtml-contextButtonBackground;;
}

input[type="checkbox"] {
  color : &dtml-shade56;;
  background : &dtml-inputBackground;;
  border : 1px solid &dtml-inputBorder;;
}

/* checkboxes used (only) for deletion */
input.warning-checkbox {
  color : &dtml-shade56;;
  background : #ead5d3;
}

input.transport {
  font-size: 95%;
    font-weight: &dtml-buttonWeight;;
  color: &dtml-standaloneButtonFontColor;;
  background: &dtml-standaloneButtonBackground;;
    margin: 0.2em 0.2em 0.1em 0.2em;
    padding: &dtml-contextButtonPadding;;
  border: &dtml-standaloneButtonBorder;;
    cursor: pointer;
}

input.button {
  font-size: 95%;
    font-weight: &dtml-buttonWeight;;
    color: &dtml-contextButtonFontColor;;
  background : &dtml-contextButtonBackground;;
    margin: 0.2em 0.2em 0.1em 0.2em;
    padding: &dtml-contextButtonPadding;;
  border: &dtml-contextButtonBorder;;
    cursor: pointer;
}

input.warning {
  font-size: 95%;
    font-weight: &dtml-buttonWeight;;
  color : &dtml-destructiveButtonFontColor;; 
  background : &dtml-destructiveButtonBackground;;
    margin: 0.2em 0.2em 0.1em 0.2em;
    padding: &dtml-contextButtonPadding;;
  border: &dtml-destructiveButtonBorder;;
    cursor: pointer;
}

input.cancel {
  font-size: 95%;
    font-weight: &dtml-buttonWeight;;
  color : &dtml-cancelButtonFontColor;;
  background : #666668;
  background : &dtml-cancelButtonBackground;;
  border : &dtml-cancelButtonBorder;;
    margin: 0.2em 0.2em 0.1em 0.2em;
    padding: &dtml-contextButtonPadding;;
    cursor: pointer;
}

/* publish screen state coded buttons */
input.reject {
  font-size: 95%;
  font-weight: &dtml-buttonWeight;;
  color: &dtml-contextButtonFontColor;;
  background : #8f7f01;
  margin: 0.2em 0.2em 0.1em 0.2em;
  padding: &dtml-contextButtonPadding;;
  border: &dtml-contextButtonBorder;;
  cursor: pointer;
}
input.revoke {
  font-size: 95%;
  font-weight: &dtml-buttonWeight;;
  color: &dtml-contextButtonFontColor;;
  background : #008c55;
  margin: 0.2em 0.2em 0.1em 0.2em;
  padding: &dtml-contextButtonPadding;;
  border: &dtml-contextButtonBorder;;
  cursor: pointer;
}
input.close {
  font-size: 95%;
  font-weight: &dtml-buttonWeight;;
  color: &dtml-contextButtonFontColor;;
  background : #202080;
  margin: 0.2em 0.2em 0.1em 0.2em;
  padding: &dtml-contextButtonPadding;;
  border: &dtml-contextButtonBorder;;
  cursor: pointer;
}



/* _______ form labels _______ */

label {
  color : #403f80; 
  text-transform : &dtml-textTransform;;
}

tr.controls label, tr.inter-controls label {
  color: &dtml-listingHeaderFontColor;;
}

th label {
  color: &dtml-listingHeaderFontColor;;
}

label.default {
  text-transform : none;
}


/* _______ pseudo form button selectors, matches button style _______ */

table.listing a.button:link {
  font-size: 100%;
  font-weight: &dtml-buttonWeight;;
  color: &dtml-contextButtonFontColor;;
  background: &dtml-contextButtonBackground;;
  border: &dtml-contextButtonBorder;;
  margin: 0.1em 0.2em;
  padding: 0em 1em 0.1em 1em;
  text-decoration : none;
}
table.listing a.button:visited {
  font-size: 100%;
  font-weight: &dtml-buttonWeight;;
  color: &dtml-contextButtonFontColor;;
  background: &dtml-contextButtonBackground;;
  border: &dtml-contextButtonBorder;;
  margin: 0.1em 0.2em;
  padding: 0em 1em 0.1em 1em;
  text-decoration : none;
}
table.listing a.button:hover {
  color : #bfffd3; 
  background : #668b69; 
  cursor : pointer;
}

/* _______ transport between screens _______ */

table.listing a.transport:link {
  font-size: 100%;
  font-weight: &dtml-buttonWeight;;
  color: &dtml-standaloneButtonFontColor;;
  background: &dtml-standaloneButtonBackground;;
  border: &dtml-standaloneButtonBorder;;
  margin: 0.1em 0.2em;
  padding: 0em 1em 0.1em 1em;
  text-decoration : none;
}
table.listing a.transport:visited {
  font-size: 100%;
  font-weight: &dtml-buttonWeight;;
  color: &dtml-standaloneButtonFontColor;;
  background: &dtml-standaloneButtonBackground;;
  border: &dtml-standaloneButtonBorder;;
  margin: 0.1em 0.2em;
  padding: 0em 1em 0.1em 1em;
  text-decoration : none;
}
table.listing a.transport:hover {
  color : #e5fffe; 
  background : #74748b; 
  border-color : #99b4cf;
  cursor : pointer;
}

/* _______ subscreen parent links _______ */

table.listing td.parent {
  background: &dtml-standaloneButtonBackground;;
  padding : 0 ! important;
  border: &dtml-listingBorder;;
  text-align : center;
  vertical-align : bottom;
}

table.listing td.parent a {
  color: &dtml-standaloneButtonFontColor;;
  text-decoration: none;
}

table.listing td.parent a:hover {
  color : #bfffd3; 
  background : #53538b;
}

table.listing div.transport-border {
  padding-bottom : 1px;
  border: &dtml-standaloneButtonBorder;;
}

table.listing div.transport-border:hover {
  color : #bfffd3; 
  background : #53538b;
}


/* _________________________________________________ info + clipboard _____ */

div.info {
  color: &dtml-inputFontColor;;
  background: &dtml-evenRowBackground;;
  margin: 0;
  padding: 0.1em 0.5em 0.5em 0.5em; 
  border: &dtml-listingBorder;;
  width : 100%; /* fix IE glitch */
}

div.info h3 {
  color: &dtml-inputFontColor;;
  margin-top : 0em;
  margin-bottom : 0.2em;  
}

div.info p {
  text-align : left;
  margin-top : 0.3em;
  margin-bottom : 0em;
}

select.clipboard, select.clipboard:focus, select.clipboard:hover {
  color : &dtml-shade26;;;
  background : &dtml-listingEvenBackground;;
  font-size: 90%;
  margin-top: 0.1em;
  margin-bottom: -0.5em;
  border : 1px solid &dtml-shade60;;
  line-height : 96%;
  width: 100%
}

select.clipboard option.disabled {
  color: #dbf3f6;
  background: #71969a;
  background: &dtml-listingHeaderBackground;; 

}

/* _________________________________________________________ feedback _____ */


div.feedback {
    color: #555;
    background: #f3f3d9;
    border: &dtml-inputBorder;;
    border-style: solid solid solid solid;
    margin: -1px 0 0 0;
    padding: 0em 0.6em 0.1em 0.6em;
}

div.alert {
    color: #3c2d50;
    background: #f7d1d1;
    border: &dtml-inputBorder;;
    border-style: solid solid solid solid;
    margin: -1px 0 0 0;
    padding: 0em 0.6em 0.1em 0.6em;
}

div.clear {
    background: transparent;
    border: 1px solid &dtml-workspace;;
    border-style: solid none none solid;
    margin: 0;
    padding: 0em 0.6em 0.1em 0.6em;
}

div.feedback a {
	color: &dtml-mainLinkColor;;
    text-decoration: underline;
}

table.listing .feedback {
  color: #555555;
  background: #f3f3d9;
  padding-top : 0.1em;
  padding-bottom : 0.2em;
}

table.listing .alert {
  color: #3c2d50;
  background: #f7d1d1;
  padding-top : 0.1em;
  padding-bottom : 0.2em;
}


/* _______ message box in content publish screen _______ */

table.listing .message {
  padding : 0 ! important;
